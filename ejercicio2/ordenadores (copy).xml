<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output file="html"/><!-- Valor por defecto -->
	<xsl:template match="/">
		<html>
			<head>
				<meta charset="utf-8"/>
			</head>
			<body>
				<h1>Ordenadores</h1>
				<table>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>Serial</th>
						<th>Due√±o</th>
					</tr>
					<xsl:apply-templates select="ordenador"/>
				</table>
			</body>
		</html>
	</xsl:template>

	<xsl:template match="ordenador">
		<tr>
			<td><xsl:value-of select="././@id"/></td>
			<td><xsl:value-of select="nombre"/></td>
			<td><xsl:value-of select="serial"/></td>
			<td><xsl:apply-templates select="persona"/></td>
		</tr>
	</xsl:template>

	<xsl:template match="persona">
		<ul>
			<li><xsl:value-of select="nombre"/></li>
			<li><xsl:value-of select="apellido"/></li>
			<li><xsl:value-of select="fechaNacimiento"/></li>
			<li><xsl:value-of select="altura"/></li>
		</ul>
	</xsl:template>

</xsl:stylesheet> 
